result-spacing = 14
horizontal = false
min-input-width = 0

### Window positioning
output = ""
anchor = center
exclusive-zone = 0
margin-top = 0
margin-bottom = 0
margin-left = 0
margin-right = 0

### Behaviour
hide-cursor = false
text-cursor = false
history = false
# history-file = /path/to/histfile
matching-algorithm = normal
require-match = true
auto-accept-single = false
hide-input = false
physical-keybindings = false
print-index = false
drun-launch = false
